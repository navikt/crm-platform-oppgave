    <description>Autolaunched flow for dispatching NAV Task to the oppgave API</description>
    <formulas>
        <description>Formula field to define the NAV unit the task is to be assigned to. If blank, standard arbeidsfordeling will be performed by API</description>
        <name>Assign_To_Unit</name>
        <dataType>String</dataType>
        <expression>IF(NOT(ISBLANK({!NAV_Task.CRM_NavUnit__c})),
{!NAV_Task.CRM_NavUnit__r.INT_UnitNumber__c},
null)</expression>
    </formulas>
    <formulas>
        <name>CommentHeaderFormula</name>
        <dataType>String</dataType>
        <expression>IF( ISBLANK({!$User.CRM_NAV_Ident__c}),
&apos;--- &apos; + {!Format_date_time} + &apos; ---&apos;,
&apos;--- &apos; + {!Format_date_time}  + &apos; &apos; + {!$User.FirstName} + &apos; &apos; + {!$User.LastName} + &apos; (&apos; + {!$User.CRM_NAV_Ident__c} + &apos;, &apos; + {!Created_By_Unit_Number} + &apos;) ---&apos;
) + {!Newline} + {!NAV_Task.NKS_Comments__c}</expression>
    </formulas>
    <formulas>
        <description>Formula for better handling of nulls for subtheme code.</description>
        <name>Subtheme_Code</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!NAV_Task.NKS_Subtheme__c}),
null,
{!NAV_Task.NKS_Subtheme__r.CRM_Code__c}
)</expression>
    </formulas>
    <formulas>
        <name>Subtype_Code</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!NAV_Task.CRM_Subtype__c}),
null,
{!NAV_Task.CRM_Subtype__r.CRM_Code__c}
)</expression>
    </formulas>
